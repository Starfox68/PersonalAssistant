{
    "name": "assistant",
    "version": "1.0",
    "manifest_version": 2,
    "background": {
        "scripts": ["background.js"]
    },

    "options_page": "options.html",

    "browser_action": {
        "default_popup": "popup.html"
    },

    "permissions": [
        "tabs",
        "<all_urls>",
        "storage",
        "alarms",
        "fontSettings"
    ]
    
}

{
  "manifest_version": 2,
  "name": "YouTube Contoller",
  "version": "1.0",

  "browser_action": {
    "default_popup": "youtubeController.html",
    "default_title": "YouTube Controller"
  },
  "icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},
  "permissions": [
    "tabs",
    "http://*/",
    "https://*/"
  ]
}
